@model List<RestauranteHN.BL.Comida>
@{
    ViewBag.Title = "Index";
}

<h2>Comidas</h2>


<table class= "table table-bordered table-hover ">
        <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Precio
            </th>
        </tr>
        </thead>
        @foreach (var comida in Model)
        {
        <tr>
            <td>@comida.id</td>
            <td>@comida.Descripcion</td>
            <td>@comida.Precio</td>
        </tr>
        }

</table>